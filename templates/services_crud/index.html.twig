{% extends 'base.html.twig' %}

{% block title %} Services {% endblock %}

{% block body %}

	<div class="content">
				<!-- Basic datatable -->
				<div class="card">
					<div class="card-header header-elements-inline">
						<h5 class="card-title" style="color:blue">Tout Les Services</h5>
						<div class="header-elements">
							<div class="list-icons">
								<a class="icon-plus-circle2" href="{{ path('app_services_crud_new') }}" ></a>
		                		<a class="list-icons-item" style="color:blue" data-action="collapse"></a>
		                		<a class="list-icons-item" style="color:blue" data-action="reload"></a>
		                		<a class="list-icons-item" style="color:blue" data-action="remove"></a>
		                	</div>
	                	</div>
					</div>

					<table class="table datatable-basic">
						<thead>
							<tr>
								{# <th>Id</th>	 #}
								<th>image</th>
                                <th>Name_Service</th>
								<th>discription </th>
								<th>Statut</th>
								<th class="text-center">Actions</th>
							</tr>
						</thead>
						<tbody>
                         {% for service in services %} 
							 <tr>
							 	 {# <td>{{ service.Id}}</td> #}
								<td><img style="width: 65px; border-radius: 50%;" src="{{ asset('uploads/' ~ service.image) }}"></td>
                                <td>{{ service.NameService}}</td>
                                <td>{{ service.discription }}</td>
								<td><span class="badge badge-primary">Active</span></td>
								<td class="text-center">
									<div class="list-icons">
										<div class="dropdown">
											<a href="#" class="list-icons-item" data-toggle="dropdown"><i class="icon-stairs"></i></a>
											<div class="dropdown-menu dropdown-menu-right">
												<a href="{{ path('app_services_crud_show', {'id': service.id}) }}" class="dropdown-item"><i class="icon-eye"></i>Afficher</a>
												<a href="{{ path('app_services_crud_edit', {'id': service.id}) }}" class="dropdown-item"><i class="icon-pencil5"></i>Modifier</a>
												<a href="{{ path('app_services_crud_delete', {'id': service.id}) }}" class="dropdown-item"><i class="icon-close2"></i>Supprimer</a>
											</div>
										</div>
									</div>
								</td>
							</tr>
                            {% endfor %}
						</tbody>
					</table>
				</div>
	</div>
				<!-- /basic datatable -->
{% endblock %}
